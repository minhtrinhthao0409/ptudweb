@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Let's Foodie - AI Recipe Generator</title>
  <link href="https://fonts.googleapis.com/css2?family=Arimo&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Arimo', sans-serif;
      background-color: #fff;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    nav {
      display: flex;
      justify-content: center;
      background-color: #F2C53D;
      padding: 10px;
      border-bottom: 2px solid #D9933D;
    }
    nav a {
      margin: 0 20px;
      text-decoration: none;
      color: #4B7322;
      font-weight: bold;
      font-size: 18px;
    }
    .container {
      margin-top: 5px;
      padding: 20px;
    }
    h1 {
      color: #4B7322;
    }
    h2 {
      color: #D95F18;
      margin-bottom: 30px;
    }
    label {
      display: block;
      margin: 15px 0 5px;
      font-weight: bold;
      color: #4B7322;
    }
    input, select {
      padding: 10px;
      width: 300px;
      margin-bottom: 20px;
      border: 2px solid #F2B950;
      border-radius: 5px;
    }
    button {
      padding: 12px 24px;
      font-size: 18px;
      cursor: pointer;
      background-color: #D95F18;
      color: white;
      border: none;
      border-radius: 8px;
      transition: background-color 0.3s;
      margin-top: 15px; 
    }
    button:hover {
      background-color: #D9933D;
    }
    #recipeResult {
      margin-top: 40px;
      padding: 20px;
      background-color: #F2C53D;
      border-radius: 10px;
      display: none;
    }
    #recipeResult h3 {
      color: #4B7322;
    }
    #recipeResult p {
      color: #4B7322;
      font-size: 16px;
    }
  </style>
</head>
<body>

<nav>
  <a href="#">Home</a>
  <a href="#">AI Recipe Generator</a>
  <a href="#">Contact</a>
</nav>

<div class="container">
  <h1>LET'S FOODIE</h1>
  <h2>AI RECIPE GENERATOR</h2>
  <p style="color: #4B7322; font-size: 14px; margin-top: -20px;">
  Not sure what to cook tonight? Enter a list of ingredients, with or without quantities, and your personal AI chef will come up with a tailor-made recipe.
</p>

  <form id="recipeForm">
    <label for="ingredients">Ingredients:</label>
    <input type="text" id="ingredients" name="ingredients" placeholder="e.g., chicken, tomato, garlic">

    <label for="servingSize">Serving Size:</label>
    <select id="servingSize" name="servingSize">
      <option value="1">1 person</option>
      <option value="2">2 people</option>
      <option value="4">4 people</option>
      <option value="6">6 people</option>
    </select>

    <label for="cuisine">Cuisine:</label>
    <select id="cuisine" name="cuisine">
      <option value="Italian">Italian</option>
      <option value="Mexican">Mexican</option>
      <option value="Japanese">Japanese</option>
      <option value="Vietnamese">Vietnamese</option>
      <option value="Indian">Indian</option>
    </select>

    <label for="difficulty">Difficulty:</label>
    <select id="difficulty" name="difficulty">
      <option value="Easy">Easy</option>
      <option value="Medium">Medium</option>
      <option value="Hard">Hard</option>
    </select>

    <label for="dietary">Dietary Preferences:</label>
    <select id="dietary" name="dietary">
      <option value="None">None</option>
      <option value="Vegetarian">Vegetarian</option>
      <option value="Vegan">Vegan</option>
      <option value="Gluten-Free">Gluten-Free</option>
      <option value="Keto">Keto</option>
    </select>

    <br>
    <button type="submit">Generate my recipe</button>
  </form>

  <div id="recipeResult">
    <h3>Your AI-Generated Recipe</h3>
    <p id="recipeText"></p>
  </div>
</div>

<script>
  document.getElementById('recipeForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const ingredients = document.getElementById('ingredients').value;
    const servingSize = document.getElementById('servingSize').value;
    const cuisine = document.getElementById('cuisine').value;
    const difficulty = document.getElementById('difficulty').value;
    const dietary = document.getElementById('dietary').value;

    // Nội dung mẫu (sau này thay bằng AI thực tế)
    const recipeContent = `
      With ingredients: <strong>${ingredients}</strong><br>
      Serving Size: <strong>${servingSize}</strong><br>
      Cuisine: <strong>${cuisine}</strong><br>
      Difficulty: <strong>${difficulty}</strong><br>
      Dietary Preference: <strong>${dietary}</strong><br><br>
      Suggested Recipe: <em>A delicious ${cuisine} style dish using ${ingredients.split(',')[0]} as the main ingredient!</em>
    `;

    document.getElementById('recipeText').innerHTML = recipeContent;
    document.getElementById('recipeResult').style.display = 'block';
    
    // Scroll xuống chỗ kết quả cho mượt hơn
    document.getElementById('recipeResult').scrollIntoView({ behavior: 'smooth' });
  });
</script>

</body>
</html>
